<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/flw_tvw_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/close"
        android:textColor="@color/simple_green"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/flw_tvw_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:text="@string/login_on_web"
        android:textColor="@color/text_dark"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/flw_ivw_computer"
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_above="@id/flw_tvw_tip"
        android:layout_centerInParent="true"
        android:src="@drawable/icon_computer" />


    <TextView
        android:id="@+id/flw_tvw_cannt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:minHeight="0dp"
        android:padding="10dp"
        android:text="@string/cannot_login"
        android:textColor="@color/icon_gray"
        android:textSize="12sp" />

    <Button
        android:id="@+id/flw_btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/flw_tvw_cannt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button_login_green"
        android:minHeight="0dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:text="@string/login"
        android:textColor="@color/simple_green"
        android:textSize="13sp" />

</RelativeLayout>