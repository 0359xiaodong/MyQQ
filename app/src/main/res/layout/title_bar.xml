<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/simple_blue">

    <TextView
        android:id="@+id/title_tvw_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="10dp"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <com.liujian.myqq.view.CircleImageView
        android:id="@+id/title_ivw_left"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        myapp:border_color="@color/white"
        myapp:border_width="1dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tvw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/input_phone_number"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/title_tvw_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tvw_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="@string/input_phone_number"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/title_ivw_right"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="5dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_tvw_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>
</RelativeLayout>
